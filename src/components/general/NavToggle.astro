---
import { Icon } from 'astro-icon';
---

<div>
  <label class='lg:hidden cursor-pointer' id='label'>
    <input class='peer hidden' id='navToggle' type='checkbox' />
    <Icon class='w-16 stroke-clr-default peer-checked:hidden' name='icon-hamburger' />
    <Icon class='hidden peer-checked:contents w-32 ' name='x'  />
  </label>


  <div class='absolute inset-0 w-fit h-fit mx-auto z-10 | -top-500 lg:hidden | '
    id='childContainer'>
    <slot />
  </div>
</div>

<style>
  label:has(input:checked) {
    position: absolute;
    inset: 0;
    height: 100vh;
    cursor: default;
  }

  label:has(input:checked) + #childContainer {
    translate: 0 600px;
    transition: translate 0.2s ease-out;
    box-shadow: 0 0 100vmax 100vmax rgb(0, 0, 0, 0.7);
  } 
</style>

